- provide(:title, 'Passwordchange')

%h1 Change password

.row
  .span6.offset3

    =form_for @user do |f|
      = render 'shared/user_error_messages'
      = f.label 'Old password'
      = f.password_field 'old_password'
      -#%br
      = f.label 'password'
      = f.password_field 'password'
      %br
      = f.label 'password_confirmation', "Confirmation"
      = f.password_field 'password_confirmation'
      %br
        = f.submit 'Update', :class => 'btn btn-success'
        = link_to 'Cancel', user_shifts_path(@user), :class => 'btn btn-danger'