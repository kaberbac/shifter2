- provide(:title, 'Shifter | Edit')

%h1 Edit profile

.row
  .span6.offset3

    =form_for @user do |f|
      = render 'shared/user_error_messages'
      = f.label 'first_name'
      = f.text_field 'first_name'
      %br
      = f.label 'last_name'
      = f.text_field 'last_name'
      %br
      = f.label 'password'
      = f.password_field 'password'
      %br
      = f.label 'password_confirmation', "Confirmation"
      = f.password_field 'password_confirmation'
      %br
      = f.submit 'Update'
      = link_to 'Cancel', user_shifts_path(@user)