%h2 User info
%b Id:
= @user.id
%br
%b Name:
= @user.full_name
%br
%b Email:
= @user.email

%hr
%h2 Roles
%hr
= render :partial=>'admin/shared/role_list'
%hr
#addRole
  = form_for [:admin, @user, @user.user_roles.new] do |f|
    = f.label 'Add Role:'
    - if @roles.present?
      = f.select :role_name, options_for_select(@roles)
      = f.submit 'Add'
    - else
      .alert.alert-info
        %strong Info!
        No more roles available to add
%hr
%h2 Workplace shift managed

= form_for [:admin, @user_role], :url => update_workplace_admin_user_user_role_path(:user_id, :id) do |userrole|
  %ul
    - userrole.where('workplace_id IS NOT NULL').each do |user_role|
      %li
        = user_role.workplace_id
  %hr
  - if @workplaces.present?
    = userrole.select(:workplace_id, Workplace.all.collect {|w| [ w.name, w.id ] })
    %br
      = user.submit t("helpers.submit"), :class => 'btn btn-success'
      = link_to t("helpers.cancel"), [:admin, Shift], :class => 'btn btn-danger'


%hr
= link_to 'Return to User List', [:admin, User]