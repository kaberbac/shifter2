- provide(:title, 'Edit')

%h1 Edit profile

.row
  .span6.offset3

    =form_for [:admin,@user] do |f|
      = render 'shared/user_error_messages'
      = f.label 'first_name'
      = f.text_field 'first_name'
      %br
      = f.label 'last_name'
      = f.text_field 'last_name'
      %br
      = f.label 'email'
      = f.text_field 'email'
      %br
        = f.submit 'Update', :class => 'btn btn-success'
        = link_to 'Cancel', admin_users_path, :class => 'btn btn-danger'